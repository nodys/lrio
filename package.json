    "jsdom": "^5.4.3",
    "mocha": "^2.2.5",
    "standard": "^3.11.1"
  },
  "browser": "./src/browser.js",
  "keywords": [
    "livereload",
    "browser",
    "server",
    "websocket",
    "browserify",
    "webcomponent"
  ],
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
